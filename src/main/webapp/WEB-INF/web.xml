<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>home</display-name>
    <servlet>
        <servlet-name>homecontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.homecontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>moviescontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.moviescontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logincontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.logincontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signupcontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.signupcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usercontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.usercontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reservecontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.reservecontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dashboardcontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.dashboardcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userdashcontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.userdashcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>moviedashcontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.moviedashcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userprofilecontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.entities.userprofilecontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>movieprofilecontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.entities.movieprofilecontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>commentcontroller</servlet-name>
        <servlet-class>com.miguel.filmproject.controllers.commentcontroller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>moviescontroller</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homecontroller</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logincontroller</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signupcontroller</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usercontroller</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reservecontroller</servlet-name>
        <url-pattern>/reserve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dashboardcontroller</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userdashcontroller</servlet-name>
        <url-pattern>/dashboard/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>moviedashcontroller</servlet-name>
        <url-pattern>/dashboard/movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userprofilecontroller</servlet-name>
        <url-pattern>/dashboard/userprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>movieprofilecontroller</servlet-name>
        <url-pattern>/dashboard/movieprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>commentcontroller</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
